{
  "opts": {
    "destination": "doc/api",
    "readme": "README.md",
    "recurse": true
  },
  "plugins": ["plugins/markdown"],
  "source": {"include": ["lib"]},
  "sourceType": "module",
  "tags": {
    "allowUnknownTags": false,
    "dictionaries": ["jsdoc"]
  },
  "templates": {
    "cleverLinks": true,
    "default": {"includeDate": false}
  }
}

{
	"bugs": "https://github.com/cedx/which.js/issues",
	"description": "Find the instances of an executable in the system path. Like the `which` Linux command.",
	"homepage": "https://github.com/cedx/which.js",
	"license": "MIT",
	"name": "@cedx/which",
	"repository": "cedx/which.js",
	"type": "module",
	"version": "8.1.0",
	"author": {
		"email": "cedric@belin.io",
		"name": "CÃ©dric Belin",
		"url": "https://belin.io"
	},
	"bin": {
		"which": "./bin/which.js"
	},
	"devDependencies": {
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^20.11.24",
		"del": "^7.1.0",
		"esbuild": "^0.20.1",
		"eslint": "^8.57.0",
		"execa": "^8.0.1",
		"typedoc": "^0.25.9",
		"typescript": "^5.3.3",
		"typescript-eslint": "^7.1.0"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"exports": {
		"types": "./lib/index.d.ts",
		"import": "./lib/index.js"
	},
	"files": [
		"lib/",
		"src/"
	],
	"imports": {
		"#which": {
			"types": "./lib/index.d.ts",
			"import": "./lib/index.js"
		}
	},
	"keywords": [
		"find",
		"path",
		"system",
		"utility",
		"which"
	],
	"scripts": {
		"build": "tsc --project src/tsconfig.json && esbuild \"--banner:js=#!/usr/bin/env node\" --bundle --format=esm --legal-comments=none --minify --outfile=bin/which.js --platform=node src/cli.ts",
		"clean": "node tool/clean.js",
		"dist": "npm run clean && npm run build && git update-index --chmod=+x bin/which.js",
		"doc": "typedoc --options etc/typedoc.js && node tool/doc.js",
		"lint": "npm run build && tsc --project tsconfig.json && eslint --config=etc/eslint.config.js etc example src test tool",
		"prepack": "npm run dist",
		"release": "node tool/publish.js",
		"start": "npm run build && node bin/which.js --help",
		"test": "npm run build && node --test --test-reporter=spec",
		"watch": "esbuild --bundle --format=esm --legal-comments=none --outfile=bin/which.js --platform=node --watch src/cli.ts"
	}
}
